<!DOCTYPE html>
<html>
<head>
  <title>Secret</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if session[:id] %>
	<form action="/sessions/delete" method='get'>
	<input type="submit" value="Log Out">
	</form>
<% end %>


<% if flash %>
	<%= flash['errors'] %>
<% end %>

<%= yield %>

</body>
</html>
